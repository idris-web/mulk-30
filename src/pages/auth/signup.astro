---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Regjistrohu">
  <div class="min-h-screen flex flex-col items-center justify-center px-4 py-12">
    <div class="w-full max-w-sm">
      <!-- Back Link -->
      <a href="/" class="inline-flex items-center gap-2 text-[var(--color-text-secondary)] hover:text-[var(--color-text)] mb-8">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Kthehu
      </a>
      
      <!-- Logo -->
      <div class="text-center mb-8">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--color-primary)] bg-opacity-10 flex items-center justify-center">
          <span class="arabic text-2xl text-[var(--color-primary)]">الملك</span>
        </div>
        <h1 class="text-2xl font-bold text-[var(--color-text)]">Krijo llogarinë</h1>
        <p class="text-[var(--color-text-secondary)]">Fillo sfidën 30-ditore</p>
      </div>
      
      <!-- Signup Form -->
      <form id="signup-form" class="space-y-4">
        <div>
          <label for="name" class="block text-sm font-medium text-[var(--color-text)] mb-1">
            Emri
          </label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required
            class="input"
            placeholder="Emri yt"
          />
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-[var(--color-text)] mb-1">
            Email
          </label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required
            class="input"
            placeholder="emri@email.com"
          />
        </div>
        
        <div>
          <label for="password" class="block text-sm font-medium text-[var(--color-text)] mb-1">
            Fjalëkalimi
          </label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            required
            minlength="6"
            class="input"
            placeholder="Minimum 6 karaktere"
          />
        </div>
        
        <div>
          <label for="ramadan_start" class="block text-sm font-medium text-[var(--color-text)] mb-1">
            Data e fillimit të Ramazanit
          </label>
          <input 
            type="date" 
            id="ramadan_start" 
            name="ramadan_start" 
            class="input"
          />
          <p class="text-xs text-[var(--color-text-secondary)] mt-1">
            Opsionale - për të llogaritur "Dita e sotme"
          </p>
        </div>
        
        <!-- Error message -->
        <div id="error-message" class="hidden text-sm text-[var(--color-error)] bg-red-50 dark:bg-red-900/20 p-3 rounded-lg">
        </div>
        
        <!-- Success message -->
        <div id="success-message" class="hidden text-sm text-[var(--color-success)] bg-green-50 dark:bg-green-900/20 p-3 rounded-lg">
        </div>
        
        <button type="submit" class="btn btn-primary w-full py-3">
          Regjistrohu
        </button>
      </form>
      
      <!-- Login Link -->
      <p class="text-center mt-6 text-[var(--color-text-secondary)]">
        Ke llogari? 
        <a href="/auth/login" class="text-[var(--color-primary)] font-medium hover:underline">
          Hyr
        </a>
      </p>
    </div>
  </div>
</Layout>

<script>
  import { signUp } from '../../lib/supabase';
  
  const form = document.getElementById('signup-form') as HTMLFormElement;
  const errorDiv = document.getElementById('error-message') as HTMLDivElement;
  const successDiv = document.getElementById('success-message') as HTMLDivElement;
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const name = formData.get('name') as string;
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;
    
    errorDiv.classList.add('hidden');
    successDiv.classList.add('hidden');
    
    const { data, error } = await signUp(email, password, name);
    
    if (error) {
      errorDiv.textContent = error.message || 'Ndodhi një gabim. Provo përsëri.';
      errorDiv.classList.remove('hidden');
      return;
    }
    
    successDiv.textContent = 'Llogaria u krijua! Kontrollo emailin për të konfirmuar.';
    successDiv.classList.remove('hidden');
    form.reset();
  });
</script>
